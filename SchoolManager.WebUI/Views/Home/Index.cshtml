                            <img src="@Url.Content(ViewBag.Photo3)" />
                        }
					    <p class="titulo">@(((SchoolManager.Domain.Entities.Post)ViewBag.Post3).Title)</p>
					    <p class="tipofecha">@(((SchoolManager.Domain.Entities.Post)ViewBag.Post3).CategoryText) - @(((SchoolManager.Domain.Entities.Post)ViewBag.Post3).Date.ToString("d/M/yyyy"))</p>
					    <div class="contenido">@Html.Raw(((SchoolManager.Domain.Entities.Post)ViewBag.Post3).ShortText)</div>
                        @Html.ActionLink("Ver más", "Novedades", "Post", new { id = ((SchoolManager.Domain.Entities.Post)ViewBag.Post3).Id }, htmlAttributes: new { @class = "vermas" })
