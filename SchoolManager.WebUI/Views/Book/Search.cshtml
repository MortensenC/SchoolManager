@model IEnumerable<SchoolManager.Domain.Entities.Book>
@if (Model.Count() == 0)
{
    <p>No se encontraron resultados de libros para esta búsqueda</p>
}
@{ var par = false; }
@foreach (var item in Model)
{
	<article class="bookresult">
		@if (!string.IsNullOrEmpty(item.Link))
      {
                              <a href="@item.Link" target="@item.Link" class="titulo">@item.Title</a>
      }
      else
      {
                                <p class="titulo">@item.Title</p>
      }
		<p class="autor">Autor: @item.Author</p>
		<p class="regular">@item.Description</p>
    </article>
	if (par) { <div class="clear-fix"></div><div class="clear-fix"></div> }
	par = !par;
}