<div class="row-donde">
    <div class="content-wrapper">
        <p>
            Estás aquí: <span>Admin</span> > <span class="hlited">Libros</span></p>
    </div>
</div>
<div class="content-wrapper seccion">
    <div class="row">
			<h1 class="header-seccion">Libros</h1>
            <div class="regularbtn">@Html.ActionLink("Crear nuevo", "Create")</div>
            <br />
            <br />
            <table class="listausers">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>Acciones</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td class="actions">
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
							@Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
    </div>
</div>