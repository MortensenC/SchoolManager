@model SchoolManager.Domain.Entities.User

@{
    ViewBag.Title = "Acceder";
}
<script type="text/javascript">
    function foco(idElemento) {
        document.getElementById(idElemento).focus();
    }

    $(document).ready(function () {
        foco("Username");
    });
</script>

<div class="row-donde">
    <div class="content-wrapper">
        <p>Estás aquí: <span class="hlited">Acceder</span></p>
    </div>
</div>

<div class="content-wrapper seccion">
	<h1 class="header-seccion">Acceder</h1>
	<section id="loginForm" class="regularform">
		<p>Ingresa tu número de documento y tu contraseña para acceder</p>
		@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true)
		<fieldset>
			<ul>
				<li>
                    <div>
                        @Html.LabelFor(u => u.Username)
                    </div>
                    <div>
                        @Html.TextBoxFor(u => u.Username)
                        @Html.ValidationMessageFor(u => u.Username)
                    </div>
                </li>
				<li>
                    <div>
                        @Html.LabelFor(u => u.Password)
                    </div>
                    <div>
                        @Html.PasswordFor(u => u.Password)
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>
                </li>
			</ul>
			<input class="regularbtn" type="submit" value="Acceder" />
		</fieldset>
	}
	</section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}