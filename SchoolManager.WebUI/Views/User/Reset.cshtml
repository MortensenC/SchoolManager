@model SchoolManager.Domain.Entities.User

@{
    ViewBag.Title = "Reset password";
}

<div class="banner-seccion">
	<img src="@Url.Content("~/Content/Images/banner_talleres.jpg")" />
</div>

<div class="row-donde">
    <div class="content-wrapper">
        <p>Estás aquí: <span>Admin</span> > <span>Usuarios</span>  > <span class="hlited">Password reset</span></p>
    </div>
</div>

<div class="content-wrapper seccion clear-fix">
	<h1 class="header-seccion">Password reset</h1>
	@Html.DisplayFor(model => model.Username), @Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Surname)<br /><br />
	<h3>Está seguro que quiere resetear el password de este usuario?</h3><br />
	@using (Html.BeginForm()) {
		<p>
			<input class="regularbtn float-left" type="submit" value="Reset" />
			<div class="secbtn padfix"><a href="javascript:history.back()">Volver al listado</a></div>
		</p>
	}
</div>