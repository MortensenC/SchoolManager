@model IEnumerable<SchoolManager.Domain.Entities.Post>
@{ var par = false; }
@if (Model.Count() == 0)
{
    <p>No se encontraron publicaciones para esta búsqueda</p>
}
else{
	<p class="res_busqueda">Resultado de la búsqueda:</p>
	<div>
		@foreach (var item in Model)
		{
			<div class="postsearch">
				<p class="titulo" onclick="openPost(@item.Id);">@Html.DisplayFor(modelItem => item.Title)</p>
				<p class="fecha">@item.Date.ToString("d/M/yyyy")</p>
			</div>
			if (par) { <div class="clear-fix"></div><div class="clear-fix"></div> }
			par = !par;
		}
	</div>
}