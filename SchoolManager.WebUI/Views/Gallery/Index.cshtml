@model IEnumerable<SchoolManager.Domain.Entities.Gallery>

@{
    ViewBag.Title = "Galerías";
}

<div class="banner-seccion">
	<img src="@Url.Content("~/Content/Images/banner_galeria.jpg")" />
</div>

<div class="row-donde">
    <div class="content-wrapper">
        <p>Estás aquí: <span>Admin</span> > <span class="hlited">Galería</span></p>
    </div>
</div>

<div class="content-wrapper seccion">
	<div class="row">
		<div class="col_1">
			<h1 class="header-seccion">Galería</h1>
		</div>
        <div class="regularbtn">@Html.ActionLink("Crear nueva", "Create")</div>
        <br />
        <br />
		<table class="listausers">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Title)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Description)
				</th>
				<th>Acciones</th>
			</tr>

		@foreach (var item in Model) {
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td class="actions">
					@Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
					@Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
					@Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
				</td>
			</tr>
		}
		</table>
	</div>
</div>